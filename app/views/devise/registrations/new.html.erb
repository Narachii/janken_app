<div class="auth">
  <div class="auth__wrap">
    <div class="auth__wrap__sign">
      <h2>Sign up for Janken Games. Get all tickets or DIE!!</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autocomplete: "off", class: "user-form" %>
        </div>
        <div class="field">
          <%= f.label :ticket %><br />
          <%= f.text_field :ticket, autocomplete: "off", class: "user-form" %>
        </div>
        <div class="field">
          <%= f.label :message,class: "label" %><br />
          <%= f.text_area :text, autocomplete: "off", class: "user-form" %>
        </div>
        <div class="field">
          <%= f.label :email,class: "label" %><br />
          <%= f.email_field :email, placeholder: "sample@mail.com", autofocus: true, class: "user-form" %>
        </div>
        <div class="field">
          <%= f.label :password,class: "label" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "user-form" %>
        </div>
        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
